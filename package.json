{
  "name": "sqltools",
  "displayName": "SQLTools - Database tools",
  "description": "Database management done right. Connection explorer, query runner, intellisense, bookmarks, query history. Feel like a database hero!",
  "version": "0.21.5",
  "publisher": "mtxr",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mtxr/vscode-sqltools",
    "type": "git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add-driver": "node ./tools/add-driver.js",
    "clean": "rimraf -rf ./dist",
    "compile": "yarn workspace @sqltools/formatter build && yarn workspace @sqltools/extension compile",
    "docs:build": "yarn --cwd ./docs run docz:build",
    "docs:dev": "yarn --cwd ./docs run docz:dev",
    "jest": "jest --config jest.config.js --passWithNoTests",
    "package": "cross-env NODE_ENV=production yarn run compile && (cd ./dist && cross-env NODE_ENV=production vsce package --yarn)",
    "postcompile": "rimraf -rf ./dist/ui/theme.js || exit 0",
    "postinstall": "yarn workspace @sqltools/formatter install",
    "precompile": "yarn test && yarn run clean",
    "pretest": "rimraf -rf ./coverage",
    "prewatch": "yarn run clean",
    "publish": "yarn run package && cd ./dist && vsce publish --yarn",
    "test:older": "cross-env CODE_VERSION=1.32.3 yarn test",
    "test:upcontainers": "bash ./.test-database/start-dbs.sh",
    "test:watch": "cross-env WATCH=1 yarn run test",
    "test": "cross-env CODE_DISABLE_EXTENSIONS=1 CODE_TESTS_WORKSPACE=./.test-database node ./test/run-tests.js",
    "watch-old": "yarn workspace @sqltools/extension watch",
    "build-old": "yarn --cwd ./docs run docz:build",
    "build": "concurrently -k \"npm:build:*\"",
    "watch": "concurrently -k \"npm:watch:*\"",
    "watch:readme": "yarn run build:readme -w",
    "build:readme": "cpx README.md dist/. -c 'node ./build-tools/extension-readme.js'",
    "watch:assets": "yarn run build:assets -w",
    "build:assets": "cpx '{static/icon.png,.vscodeignore,LICENSE.md,CHANGELOG.md}' dist/.",
    "watch:drivericons": "yarn run build:drivericons -w",
    "build:drivericons": "cpx 'packages/drivers/icons/**/*' dist/icons/driver/.",
    "build:ls": "yarn workspace @sqltools/language-server build",
    "watch:ls": "yarn workspace @sqltools/language-server watch",
    "build:ext": "yarn workspace @sqltools/extension build",
    "watch:ext": "yarn workspace @sqltools/extension watch",
    "build:ui": "yarn workspace @sqltools/ui build",
    "watch:ui": "yarn workspace @sqltools/ui watch"
  },
  "devDependencies": {
    "@types/source-map-support": "^0.5.0",
    "concurrently": "^5.0.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "jest-environment-node": "^24.5.0",
    "minimist": "^1.2.0",
    "parcel": "^2.0.0-alpha.3.2",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.11",
    "typescript": "^3.7.3",
    "vsce": "^1.66.0"
  }
}
